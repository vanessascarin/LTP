//Escreva o algoritmo em 6 que realiza a soma de dois números

#include<stdio.h>
#include<locale.h>

main(){

setlocale(LC_ALL,"");
float num1, num2, soma;

printf("Insira o primeiro numero a ser somado: \n");
scanf("%f", &num1);
printf("Insira o segundo numero a ser somado: \n");
scanf("%f", &num2);

soma=num1+num2;
printf("A soma de %.2f e %.2f é %.2f. \n", num1, num2, soma);


}
