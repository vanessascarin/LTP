//Escreva o algoritmo que realiza o cálculo da média final dos alunos com 4 notas

#include <stdio.h>
#include<locale.h>

main (){

setlocale(LC_ALL,"");
float n1, n2, n3, n4, media;

printf("Entre com as 4 notas. \n");
scanf("%f", &n1);
scanf("%f", &n2);
scanf("%f", &n3);
scanf("%f", &n4);

media=(n1+n2+n3+n4)/4;
printf("A média das notas %.2f, %.2f, %.2f e %.2f é: %.2f. \n", n1, n2, n3, n4, media);

}
