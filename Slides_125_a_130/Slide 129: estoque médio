//Calcular o estoque médio de uma peça sendo que ESTOQUEMÉDIO = (QUANTIDADE MÍNIMA + QTDE MÁXIMA)/2

#include<stdio.h>
#include<locale.h>

main(){

setlocale(LC_ALL,"");
float EstMed, QMin, QMax;

printf("Entre com o valor da quantidade mímnima e máxima do estoque. \n");
scanf("%f %f", &QMin, &QMax);

EstMed=(QMin+QMax)/2;
printf("O estoque médio é %.2f. \n", EstMed);

}
